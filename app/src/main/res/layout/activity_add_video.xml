<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_add_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context="percept.myplan.Activities.AddVideoActivity">

    <include
        android:id="@+id/lay1"
        layout="@layout/app_toolbar"/>

    <TextView
        android:id="@+id/tvChooseExistingVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay1"
        android:background="@android:color/white"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="@string/chooseexistingvideo"
        android:textColor="@android:color/black"/>

    <View
        android:id="@+id/lay2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tvChooseExistingVideo"
        android:layout_marginLeft="10dp"
        android:background="@color/sidemenu_seperator"/>

    <TextView
        android:id="@+id/tvRecordVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay2"
        android:background="@android:color/white"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="@string/recordvideo"
        android:textColor="@android:color/black"/>

    <View
        android:id="@+id/lay3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tvRecordVideo"
        android:layout_marginLeft="10dp"
        android:background="@color/sidemenu_seperator"/>

    <TextView
        android:id="@+id/tvChooseFromLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay3"
        android:background="@android:color/white"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="@string/choosefromlink"
        android:textColor="@android:color/black"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tvChooseFromLink"
        android:background="@color/sidemenu_seperator"/>

    <VideoView
        android:id="@+id/vvPlayVideo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_below="@+id/view"/>

    <ProgressBar
        android:id="@+id/pbVideos"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>

    <include layout="@layout/lay_internet_lost"/>
</RelativeLayout>
