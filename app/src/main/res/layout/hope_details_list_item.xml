<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/lay_moodrating_home_border"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_album_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgCardImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/album_cover_height"
                android:clickable="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tvCardImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/imgCardImage"
                android:gravity="left"
                android:padding="@dimen/album_title_padding"
                android:textColor="@android:color/black"
                android:textSize="@dimen/album_title" />

            <TextView
                android:id="@+id/tvCardImageEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/imgCardImage"
                android:gravity="right"
                android:padding="@dimen/album_title_padding"
                android:paddingRight="10dp"
                android:text="@string/edit"
                android:textColor="@color/appBackColor"
                android:textSize="@dimen/album_title" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardVideo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/lay_moodrating_home_border"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_album_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextureView
                android:id="@+id/videoViewCardVideo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/album_cover_height"
                android:clickable="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tvCardVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/videoViewCardVideo"
                android:gravity="left"
                android:padding="@dimen/album_title_padding"
                android:textColor="@android:color/black"
                android:textSize="@dimen/album_title" />

            <TextView
                android:id="@+id/tvCardVideoEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/videoViewCardVideo"
                android:gravity="right"
                android:padding="@dimen/album_title_padding"
                android:paddingRight="10dp"
                android:text="@string/edit"
                android:textColor="@color/appBackColor"
                android:textSize="@dimen/album_title" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>