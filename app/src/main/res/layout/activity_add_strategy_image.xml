<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_strategy_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backcolor"
    android:orientation="vertical"
    tools:context="percept.myplan.Activities.AddStrategyImageActivity">


    <include layout="@layout/app_toolbar" android:id="@+id/lay1" />

    <TextView
        android:id="@+id/tvChooseExisting"
        android:layout_width="match_parent"
        android:layout_below="@+id/lay1"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="@string/chooseexistingimage"
        android:textColor="@android:color/black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tvChooseExisting"
        android:id="@+id/lay2"
        android:layout_marginLeft="10dp"
        android:background="@color/sidemenu_seperator" />

    <TextView
        android:id="@+id/tvTakeNew"
        android:layout_width="match_parent"
        android:layout_below="@+id/lay2"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="@string/takenewimage"
        android:textColor="@android:color/black" />

    <View
        android:layout_width="match_parent"
        android:layout_below="@+id/tvTakeNew"
        android:layout_height="1dp"
        android:background="@color/sidemenu_seperator" />

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:id="@+id/pbAddImage" />
    <include layout="@layout/lay_internet_lost"/>
</RelativeLayout>
