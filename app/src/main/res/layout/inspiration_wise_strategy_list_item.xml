<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvInspirationWiseStrategyDesc"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tvInspirationWiseStrategyName"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

    <TextView
        android:id="@+id/tvInspirationWiseStrategyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/img"
        android:gravity="top"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:text="Message 1 Mom"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvInspirationWiseStrategyDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvInspirationWiseStrategyName"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/img"
        android:gravity="top"
        android:paddingLeft="5dp"
        android:maxLines="1"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:text="Message 1 Mom"
        android:textSize="14sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tvInspirationWiseStrategyDesc"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:background="@color/sidemenu_seperator" />

</RelativeLayout>